{
  "name": "hora-services-qa-framework",
  "version": "1.0.0",
  "description": "QA Automation Framework for Hora Services using Playwright and Cucumber",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test:smoke": "cucumber-js --tags \"@smoke and not @api\"",
    "test:api": "cucumber-js --tags @api",
    "test:api:smoke": "cucumber-js --tags @api-smoke",
    "test:web": "cucumber-js features/web --tags @web",
    "test:integration": "cucumber-js --tags @integration",
    "test:security": "cucumber-js --tags @security",
    "test:all": "cucumber-js --parallel 2",
    "test:nightly": "npm run test:smoke && npm run test:api && npm run test:integration",
    "perf:k6:smoke": "k6 run perf/k6/smoke.js",
    "perf:k6:load": "k6 run perf/k6/load.js",
    "report:cucumber": "node scripts/generate-report.js",
    "report:allure": "allure generate allure-results --clean -o allure-report",
    "report:allure:open": "allure open allure-report",
    "db:seed": "ts-node scripts/seed-test-data.ts",
    "db:clean": "ts-node scripts/clean-test-data.ts",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"features/**/*.feature\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"features/**/*.feature\"",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "clean": "rimraf dist reports/cucumber/*.json reports/cucumber/*.html"
  },
  "keywords": [
    "qa",
    "automation",
    "playwright",
    "cucumber",
    "bdd",
    "odoo"
  ],
  "author": "Hora Services QA Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "cucumber-html-reporter": "^7.1.1",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "playwright": "^1.48.0",
    "pouchdb-node": "^8.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@wdio/allure-reporter": "^8.0.0",
    "allure-commandline": "^2.25.0",
    "allure-cucumberjs": "^3.4.4",
    "eslint": "^9.0.0",
    "pouchdb-adapter-memory": "^9.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0"
  }
}
